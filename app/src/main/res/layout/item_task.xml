<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0.04dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:layout_constraintWidth_percent="0.92"
    app:layout_constraintHeight_min="80dp"
    app:layout_constraintDimensionRatio="16:3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/calendarCard">

<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">

<!-- 시간 -->
<TextView
   android:id="@+id/task_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="00:00"
    android:textSize="14sp"
    android:textColor="@color/gray"
    android:fontFamily="@font/pretendard_medium"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<!-- 파란 라인 -->
<View
    android:id="@+id/task_line"
    android:layout_width="2dp"
    android:layout_height="36dp"
    android:background="@drawable/rounded_bar"
    app:layout_constraintTop_toTopOf="@+id/task_time"
    app:layout_constraintStart_toEndOf="@id/task_time"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp" />

<!-- 텍스트 영역 -->
<LinearLayout
    android:id="@+id/text_box"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintStart_toEndOf="@id/task_line"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@id/task_checkbox"
    android:layout_marginStart="12dp">

    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="할 일 내용"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/task_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 2"
        android:textSize="13sp"
        android:textColor="#9A9A9A"
        android:fontFamily="@font/pretendard_medium"/>
</LinearLayout>

<!-- 체크박스 -->
<CheckBox
    android:id="@+id/task_checkbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
