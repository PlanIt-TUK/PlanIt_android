<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andoird="http://schemas.android.com/tools"
    android:background="@color/bg_main">

<!-- 🔸 좌우 5% 가이드라인 -->
<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.05" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_end"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.95" />

<!-- 🔸 상단 8% 가이드라인 -->
<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.08" />

<!-- 🔹 프로젝트 선택 제목 -->
<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="프로젝트 선택"
    android:textSize="18sp"
    android:textColor="@color/black"
    android:fontFamily="@font/pretendard_bold"
    app:layout_constraintTop_toTopOf="@id/guideline_top"
    app:layout_constraintStart_toStartOf="@id/guideline_start" />

<!-- 🔹 서브 텍스트 -->
<TextView
    android:id="@+id/subtitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="작업할 프로젝트를 선택해주세요"
    android:textSize="13sp"
    android:textColor="@color/gray"
    android:fontFamily="@font/pretendard_medium"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintStart_toStartOf="@id/title" />

<!-- 🔹 현재 프로젝트 박스 (스크롤 바깥 고정) -->
<LinearLayout
    android:id="@+id/current_project_box"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_current_project"
    android:padding="12dp"
    android:gravity="center"
    android:layout_marginTop="24dp"
    android:layout_marginHorizontal="50dp"
    app:layout_constraintTop_toBottomOf="@id/subtitle"
    app:layout_constraintStart_toStartOf="@id/guideline_start"
    app:layout_constraintEnd_toEndOf="@id/guideline_end">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 프로젝트"
        android:textSize="13sp"
        android:textColor="#2F80ED"
        android:fontFamily="@font/pretendard_medium" />

    <TextView
        android:id="@+id/current_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 2"
        android:textSize="14sp"
        android:textColor="#000000"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginTop="4dp"/>
</LinearLayout>

<!-- 🔹 모든 프로젝트 텍스트 (스크롤 바깥 고정) -->
<LinearLayout
    android:id="@+id/all_projects_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="24dp"
    android:gravity="center_vertical"
    app:layout_constraintTop_toBottomOf="@id/current_project_box"
    app:layout_constraintStart_toStartOf="@id/guideline_start">

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_folder"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모든 프로젝트"
        android:textColor="#6F6F6F"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"/>
</LinearLayout>

<!-- 🔹 프로젝트 버튼들만 스크롤 -->
<ScrollView
    android:id="@+id/project_scroll"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@id/all_projects_title"
    app:layout_constraintStart_toStartOf="@id/guideline_start"
    app:layout_constraintEnd_toEndOf="@id/guideline_end"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/project_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        andoird:clipChildren="false">

        <!-- 여기에 동적으로 프로젝트 버튼이 추가됨 -->

        <Button
            android:id="@+id/project1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.PlanIt.Button"
            android:layout_gravity="center"
            android:text="프로젝트 1"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:background="@drawable/bg_project_button"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="50dp" />

        <Button
            android:id="@+id/project2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.PlanIt.Button"
            android:layout_gravity="center"
            android:text="프로젝트 2"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:background="@drawable/bg_project_button"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="50dp" />

        <Button
            android:id="@+id/btn_add_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.PlanIt.Button"
            android:layout_gravity="center"
            android:text="+ 새 할 일 추가"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button"
            android:backgroundTint="@null"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="14sp"
            android:paddingHorizontal="48dp"
            android:paddingVertical="8dp"
            android:elevation="6dp"
            android:layout_marginTop="12dp"/>


    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

