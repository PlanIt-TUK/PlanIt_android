<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- 🔸 좌우 5% 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- 🔸 상단 8% 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <!-- 🔹 프로젝트 선택 제목 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 선택"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="@id/guideline_start" />

    <!-- 🔹 서브 텍스트 -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작업할 프로젝트를 선택해주세요"
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title" />

    <!-- 🔹 현재 프로젝트 박스 (스크롤 바깥 고정) -->
    <LinearLayout
        android:id="@+id/current_project_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_current_project"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 프로젝트"
            android:textSize="13sp"
            android:textColor="#2F80ED"
            android:fontFamily="@font/pretendard_medium" />

        <TextView
            android:id="@+id/current_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 2"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- 🔹 모든 프로젝트 텍스트 (스크롤 바깥 고정) -->
    <LinearLayout
        android:id="@+id/all_projects_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/current_project_box"
        app:layout_constraintStart_toStartOf="@id/guideline_start">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_folder"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모든 프로젝트"
            android:textColor="#6F6F6F"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_medium"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>