<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlanIt" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundColor"> @color/white</item>
    </style>

    <style name="Theme.PlanIt" parent="Base.Theme.PlanIt" />

    <style name="Widget.PlanIt.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <!-- 공통 원형 색상 뷰 스타일 -->
    <style name="ColorCircleBase">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_color_circle</item>
    </style>

    <!-- 색상별 스타일 -->
    <style name="colorRed" parent="ColorCircleBase">
        <item name="android:backgroundTint">#FF384A</item>
    </style>

    <style name="colorPink" parent="ColorCircleBase">
        <item name="android:backgroundTint">#FFA9A9</item>
    </style>

    <style name="colorOrange" parent="ColorCircleBase">
        <item name="android:backgroundTint">#FB923C</item>
    </style>

    <style name="colorYellow" parent="ColorCircleBase">
        <item name="android:backgroundTint">#FBBF24</item>
    </style>

    <style name="colorGreen" parent="ColorCircleBase">
        <item name="android:backgroundTint">#00B894</item>
    </style>

    <style name="colorBlue" parent="ColorCircleBase">
        <item name="android:backgroundTint">#0984E3</item>
    </style>

    <style name="colorViolet" parent="ColorCircleBase">
        <item name="android:backgroundTint">#FF4889</item>
    </style>

    <style name="colorLavender" parent="ColorCircleBase">
        <item name="android:backgroundTint">#A29BFE</item>
    </style>

    <style name="colorAmber" parent="ColorCircleBase">
        <item name="android:backgroundTint">#A16207</item>
    </style>

    <style name="colorGrayLight" parent="ColorCircleBase">
        <item name="android:backgroundTint">#9CA3AF</item>
    </style>

    <style name="colorGrayDark" parent="ColorCircleBase">
        <item name="android:backgroundTint">#5E728F</item>
    </style>

    <style name="colorBlack" parent="ColorCircleBase">
        <item name="android:backgroundTint">#3E4147</item>
    </style>



</resources>