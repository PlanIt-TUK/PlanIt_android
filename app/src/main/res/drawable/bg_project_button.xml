<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 실제 버튼 배경 -->
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#E6F0FF"/> <!-- 눌렀을 때 색상 -->
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FCFDFE"/> <!-- 일반 상태 배경 -->
                    <stroke android:width="1dp" android:color="#D0D4DA"/> <!-- 구분 가능한 테두리 -->
                    <corners android:radius="16dp"/>
                </shape>
            </item>
        </selector>
    </item>

</layer-list>
